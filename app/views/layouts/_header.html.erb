<div class="row">

    <a href="/">
    <div class="small-12 medium-4 large-6 columns namelogo">
        <ul class="left button-group">
          <li><%= image_tag("capy.png", size: "16x10", alt: "Edit Entry")%></li>
          <li margin-left="10px"><h1 > Capibara</h1></li>
        </ul>
    </div>
    </a>
    
  <div class="small-12 medium-8 large-6 columns">
    <div class="nav-bar">
      <ul class="button-group">
        <%if signed_in?%>
          <li>
            <%= link_to cart_path, class:"button" do%>
              My Cart
              (<span class="cart-count"><%=current_user.cart_count%></span>)
            <%end%>
          </li>
          <li><%=link_to current_user.email, edit_user_registration_path, class: "button"%></li>
          <li><%=link_to "Logout", destroy_user_session_path, method: :delete, class: "button"%></li>
        <%else%>
          <li><%=link_to "Register", new_user_registration_path, class: "button"%></li>
          <li><%=link_to "Login", new_user_session_path, class: "button"%></li>
        <%end%>
      </ul>
    </div>
  </div>
</div>
